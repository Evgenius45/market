{% extends 'market/base.jinja2' %}
{% block header_slider %}
{% endblock %}
{% block middle %}
    <div class="Middle Middle_top">
        <div class="Section">
            <div class="wrap">
                <div class="Product">
                    <div class="ProductCard">
                        <div class="ProductCard-look">
                            <div class="ProductCard-photo">
                                <img src="{{ images[0].image.url }}" alt="bigGoods.png" />
                            </div>
                            <div class="ProductCard-picts">
                                {% for image in images %}
                                    {% if image.image == images[0].image %}
                                    <a class="ProductCard-pict ProductCard-pict_ACTIVE" href="{{ image.image.url }}">
                                        <img src="{{ image.image.url }}" alt="bigGoods.png" />
                                    </a>
                                    {% else %}
                                    <a class="ProductCard-pict" href="{{ image.image.url }}">
                                        <img src="{{ image.image.url }}" alt="slider.png" />
                                    </a>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                        <div class="ProductCard-desc">
                            <div class="ProductCard-header">
                                <h2 class="ProductCard-title">{{ product.name }}</h2>
                                <div class="ProductCard-info">
                                    <div class="ProductCard-cost">
                                        <div class="ProductCard-price">$55.00
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="ProductCard-cart">
                                <div class="ProductCard-cartElement ProductCard-cartElement_amount">
                                    <div class="Amount Amount_product">
                                        <button class="Amount-remove" type="button">
                                        </button>
                                        <input class="Amount-input form-input" name="amount" type="text" value="1" />
                                        <button class="Amount-add" type="button">
                                        </button>
                                    </div>
                                </div>
                                <div class="ProductCard-cartElement">
                                    <a class="btn btn_primary" href="#modal_open">
                                        <img class="btn-icon" src="{{ static('market/assets/img/icons/card/cart_white.svg') }}" alt="cart_white.svg" />
                                        <span class="btn-content">Купить</span>
                                    </a>
                                </div>
                                <div id="modal_open" class="my_modal">
                                    <div class="my_modal-dialog">
                                        <div class="my_modal-content">
                                            <div class="my_modal-header">
                                                <p class="my_modal-title">Поздравляем!</p>
                                                <a href="#" title="Закрыть модальное окно" class="close">×</a>
                                            </div>
                                            <div class="my_modal-body">
                                                <p>Товар успешно добавлен в корзину!</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="ProductCard-footer">
                                <div class="ProductCard-tags">
                                    <strong class="ProductCard-tagsTitle">Тэги:
                                    </strong>
                                     {% for tag in product.tags.all() %}
                                         {% if tag != product.tags.last() %}
                                            <a href="#">{{ tag }}</a>,
                                         {% else %}
                                            <a href="#">{{ tag }}</a>
                                         {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="Tabs Tabs_default">
                        <div class="Tabs-links">
                            <a class="Tabs-link_ACTIVE Tabs-link" href="#description">
                                <span>Описание</span>
                            </a>
                            <a class="Tabs-link" href="#sellers">
                                <span>Продавцы</span>
                            </a>
                            <a class="Tabs-link" href="#addit">
                                <span>Характеристика</span>
                            </a>
                            <a class="Tabs-link" href="#reviews">
                                <span>Отзывы ({{ product.review_set.count() }})</span>
                            </a>
                        </div>
                        <div class="Tabs-wrap">
                            <div class="Tabs-block" id="description">
                                {{ product.description }}
                                <div class="clearfix">
                                </div>
                                <div class="table">
                                    <table>
                                        <tr>
                                            <th>Характеристика
                                            </th>
                                            <th>Значение
                                            </th>
                                        </tr>
                                        <tr>
                                            <td>Тип устройства
                                            </td>
                                            <td>{{ product.category_id }}
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div class="Tabs-block" id="sellers">
                                <div class="Section-content">
                                    <div class="Orders">
                                    {% for shop in product.shops.filter(products=product) %}
                                        <div class="Order Order_anons">
                                            <div class="Order-personal">
                                                <div class="row">
                                                    <div class="row-block">
                                                        <a class="Order-title" href="oneorder.html">
                                                            {{ shop }}
                                                        </a>
                                                        <div class="ProductCard-cartElement" style="margin-top: 10px;">
                                                            <a class="btn btn_primary" href="#modal_open">
                                                                <img class="btn-icon" src="{{ static('market/assets/img/icons/card/cart_white.svg') }}" alt="cart_white.svg" />
                                                                <span class="btn-content">Купить</span>
                                                            </a>
                                                        </div>
                                                    </div>
                                                    <div class="row-block">
                                                        <div class="Order-info Order-info_delivery">
                                                            <div class="Order-infoType">Тип доставки:
                                                            </div>
                                                            <div class="Order-infoContent">Обычная доставка
                                                            </div>
                                                        </div>
                                                        <div class="Order-info Order-info_pay">
                                                            <div class="Order-infoType">Оплата:
                                                            </div>
                                                            <div class="Order-infoContent">Онлайн картой
                                                            </div>
                                                        </div>
                                                        <div class="Order-info">
                                                            <div class="Order-infoType">Стоимость:
                                                            </div>
                                                            <div class="Order-infoContent"><span class="Order-price">{{ shop.offer_set.get(product=product).price }}$</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                    </div>
                                </div>
                            </div>
                            <div class="Tabs-block" id="addit">
                                <div class="Product-props">
                                {% for property in product.property.all() %}
                                    <div class="Product-prop">
                                        <strong>{{ property }}
                                        </strong><span> {{ product.productproperty_set.get(property=property).value }}</span>
                                    </div>
                                {% endfor %}
                                </div>
                            </div>
                            <div class="Tabs-block" id="reviews">
                                {% for review in product.review_set.filter(product=product) %}
                                <header class="Section-header">
                                <!-- TODO использовать loop.index или из services reviews_quantity -->
                                    <h3 class="Section-title">{{ loop.index }} отзыв</h3>
                                </header>
                                <div class="Comments">
                                    <div class="Comment">
                                        <div class="Comment-column Comment-column_pict">
                                            <div class="Comment-avatar">
                                            </div>
                                        </div>
                                        <div class="Comment-column">
                                            <header class="Comment-header">
                                                <div>
                                                    {% if review.user.first_name and review.user.last_name %}
                                                        <strong class="Comment-title">{{ review.user.first_name }} {{ review.user.last_name }}</strong>
                                                    {% else %}
                                                        <strong class="Comment-title">{{ review.user.username }}</strong>
                                                    {% endif %}
                                                    <!-- TODO реализовать метод который будет возвращать буквенный месяц-->
                                                    <span class="Comment-date">Декабрь 25&#32;&#32;/&#32;&#32;2017&#32;&#32;/&#32;&#32;22:50</span>
                                                </div>
                                            </header>
                                            <div class="Comment-content">{{ review.review_text }}</div>
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                                <header class="Section-header Section-header_product">
                                    <h3 class="Section-title">Добавить отзыв
                                    </h3>
                                </header>
                                <div class="Tabs-addComment">
                                    <form class="form" action="#" method="post">
                                        <div class="form-group">
                                            <textarea class="form-textarea" name="review" id="review" placeholder="Отзыв"></textarea>
                                        </div>

                                        <div class="form-group">
                                            <button class="btn btn_muted" type="submit">Отправить отзыв
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
