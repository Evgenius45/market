{% extends 'market/base.jinja2' %}

{% block middle %}
<h1>Список импортов</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Имя файла или URL</th>
      <th>Дата и время начала</th>
      <th>Дата и время окончания</th>
      <th>Статус</th>
      <th>Количество импортированных товаров</th>
      <th>Ошибки</th>
    </tr>
  </thead>
  <tbody>
    {% for import in imports %}
    <tr>
      <td>{{ import.source }}</td>
      <td>{{ import.start_time }}</td>
      <td>{{ import.end_time }}</td>
      <td>{{ import.get_status_display }}</td>
      <td>{{ import.imported_count }}</td>
      <td>{{ import.errors|length }}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}