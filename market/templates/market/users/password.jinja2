{% extends 'market/base.jinja2' %}

{% block middle %}
input.error {
  border: 1px solid red;
}
</style>
<div class="wrapper">
    <div class="header">
        <h3 class="sign-in">Восстановление пароля </h3>
        <h5>Введите email пользователя</h5>
    </div>

    <form method="post">
    {% csrf_token %}
        {% if form.errors %}
            {% for field, messages in form.errors.items() %}
                <p class="error-message">{{ messages }}</p>
            {% endfor %}
        {% endif %}
        <div>
           <input class="user-input" type="email" name="{{form.email.name}}" id="email.id" placeholder="{{form.email.label}}" />
        </div>
        <div>
            <input type="submit" value="Отправить новый пароль на email." />
        </div>
        {% if request.GET.success_message %}
            <div class="alert alert-success">
        {{ request.GET.success_message }}
        {% endif %}
    </form>
</div>

{% endblock %}