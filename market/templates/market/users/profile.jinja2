{% extends 'market/base.jinja2' %}

{% block banner %}
{% endblock %}

{% block middle %}
<div class="Middle Middle_top">
    <div class="Section Section_column Section_columnLeft">
        <div class="wrap">
            <div class="Section-column">
                <div class="Section-columnSection">
                    <header class="Section-header">
                        <strong class="Section-title">Навигация
                        </strong>
                    </header>
                    <div class="Section-columnContent">
                        <div class="NavigateProfile">
                            <ul class="menu menu_vt">
                                <li class="menu-item"><a class="menu-link" href="{{ url('users:users_account') }}">Личный
                                    кабинет</a>
                                </li>
                                <li class="menu-item_ACTIVE menu-item"><a class="menu-link"
                                                                          href="{{ url('users:users_profile') }}">Профиль</a>
                                </li>
                                <li class="menu-item"><a class="menu-link" href="historyorder.html">История
                                    заказов</a>
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="Section-content">
                <div class="Profile">
                    <form class="form Profile-form" action="{{ url('users:users_profile') }}" method="post"
                          enctype="multipart/form-data">
                        {% csrf_token %}
                        <div class="row">
                            <div class="row-block">
                                <div class="form-group">
                                    <label class="form-label" for="{{ form.avatar.id_for_label }}">Аватар
                                    </label>
                                    <div class="Profile-avatar Profile-avatar_noimg">

                                        <label class="Profile-fileLabel" for="{{ form.avatar.id_for_label }}"><img
                                                src="{{ static('market/assets/img/icons/upload.png') }}"
                                                alt="upload.png"/>Загрузить фото
                                        </label>

                                        {{ form.avatar }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="{{ form.first_name.id_for_label }}">Имя
                                    </label>
                                    {{ form.first_name }}
                                    <label class="form-label" for="{{ form.last_name.id_for_label }}">Фамилия
                                    </label>
                                    {{ form.last_name }}
                                </div>
                            </div>
                            <div class="row-block">
                                <div class="form-group">
                                    <label class="form-label" for="{{ form.phone_number.id_for_label }}">Телефон
                                    </label>
                                    {{ form.phone_number }}
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="{{ form.email.id_for_label }}">E-mail
                                    </label>
                                    {{ form.email }}
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="password">Пароль
                                    </label>
                                    <input class="form-input" id="password" name="password" type="password"
                                           placeholder="Тут можно изменить пароль"/>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="passwordReply">Подтверждение пароля
                                    </label>
                                    <input class="form-input" id="passwordReply" name="passwordReply"
                                           type="password"
                                           placeholder="Введите пароль повторно"/>
                                </div>
                                <div class="form-group">
                                    <div class="Profile-btn">
                                        <button class="btn btn_success" type="submit">Сохранить
                                        </button>
                                    </div>
                                    {% if request.GET.success_message %}
                                        <div class="Profile-success">
                                            {{ request.GET.success_message }}
                                        </div>
                                    {% endif %}
                                    </div>
                                </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}