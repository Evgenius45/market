{% extends 'market/base.jinja2' %}

{% block banner %}
{% endblock %}

{% block middle %}
    <div class="Middle Middle_top">
        <div class="Middle-top">
            <div class="wrap">
                <div class="Middle-header">
                    <h1 class="Middle-title">Профиль
                    </h1>
                    <ul class="breadcrumbs Middle-breadcrumbs">
                        <li class="breadcrumbs-item"><a href="index.html">home</a>
                        </li>
                        <li class="breadcrumbs-item breadcrumbs-item_current"><span>Профиль</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="Section Section_column Section_columnLeft">
            <div class="wrap">
                <div class="Section-column">
                    <div class="Section-columnSection">
                        <header class="Section-header">
                            <strong class="Section-title">Навигация
                            </strong>
                        </header>
                        <div class="Section-columnContent">
                            <div class="NavigateProfile">
                                <ul class="menu menu_vt">
                                    <li class="menu-item"><a class="menu-link" href="{{ url('users:users_account') }}">Личный
                                        кабинет</a>
                                    </li>
                                    <li class="menu-item_ACTIVE menu-item"><a class="menu-link"
                                                                              href="{{ url('users:users_profile') }}">Профиль</a>
                                    </li>
                                    <li class="menu-item"><a class="menu-link" href="historyorder.html">История
                                        заказов</a>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="Section-content">
                    <div class="Profile">
                        <form class="form Profile-form" action="{{ url('users:users_profile') }}" method="post"
                              enctype="multipart/form-data">
                            {% csrf_token %}
                            <div class="row">
                                <div class="row-block">
                                    {% if user.avatar %}
                                        <div class="Profile-avatar">
                                            <div class="Profile-img"><img src="{{ user.avatar.url }}"
                                                                          alt="card.jpg"/>
                                            </div>
                                            <label class="Profile-fileLabel" for="{{ second_form.avatar.id_for_label }}">Выберите
                                                аватар
                                            </label>
                                            {{ second_form.avatar }}
                                        </div>
                                    {% else %}
                                        <div class="form-group">
                                            <label class="form-label" for="{{ second_form.avatar.id_for_label }}">Аватар
                                            </label>
                                            <div class="Profile-avatar Profile-avatar_noimg">

                                                <label class="Profile-fileLabel"
                                                       for="{{ second_form.avatar.id_for_label }}"><img
                                                        src="{{ static('market/assets/img/icons/upload.png') }}"
                                                        alt="upload.png"/>Загрузить фото
                                                </label>
                                                {{ second_form.avatar }}
                                            </div>
                                        </div>
                                    {% endif %}
                                    <div class="form-group">
                                        <label class="form-label" for="{{ second_form.first_name.id_for_label }}">Имя
                                        </label>
                                        {{ second_form.first_name }}
                                        <label class="form-label" for="{{ second_form.last_name.id_for_label }}">Фамилия
                                        </label>
                                        {{ second_form.last_name }}
                                    </div>
                                </div>
                                <div class="row-block">
                                    <div class="form-group">
                                        <label class="form-label" for="{{ second_form.phone_number.id_for_label }}">Телефон
                                        </label>
                                        {{ second_form.phone_number }}
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="{{ second_form.email.id_for_label }}">E-mail
                                        </label>
                                        {{ second_form.email }}
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="{{ form.new_password1.id_for_label }}">Пароль
                                        </label>
                                        {{ form.new_password1 }}
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="{{ form.new_password2.id_for_label }}">Подтверждение пароля
                                        </label>
                                        {{ form.new_password2 }}
                                    </div>
                                    <div class="form-group">
                                        <div class="Profile-btn">
                                            <button class="btn btn_success" type="submit">Сохранить
                                            </button>
                                        </div>
                                        {% if request.GET.success_message %}
                                            <div class="Profile-success">
                                                {{ request.GET.success_message }}
                                            </div>
                                        {% endif %}
                                        {% if second_form.errors or form.errors %}
                                            {% for filed, message in second_form.errors.items() %}
                                                {% if field==__all__ %}
                                                    <p class="error-message">{{ message }}</p>
                                                {% endif %}
                                            {% endfor %}
                                            {% for filed, message in form.errors.items() %}
                                                {% if field==__all__ %}
                                                    <p class="error-message">{{ message }}</p>
                                                {% endif %}
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}