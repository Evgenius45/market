{% for product in top_products %}
<div class="Card"><a class="Card-picture" href="#"><img src="{{ product.preview.url }}" alt="{{ product.preview.name }}" /></a>
    <div class="Card-content">
        <strong class="Card-title"><a href="#">{{ product.name}}</a>
        </strong>
        <div class="Card-description">
            <div class="Card-cost"><span class="Card-price">$85.00</span>
            </div>
            <div class="Card-category">{{ product.category_id.name }}
            </div>
            <div class="Card-hover"><a class="Card-btn" href="#"><img src="market/uploads/media/icons/card/cart.svg" alt="cart.svg" /></a>
            </div>
        </div>
    </div>
</div>
{% endfor %}
